<MyTextField@MDTextField>:
    size_hint: 0.5, 0.1
    input_type: "text"


<MyNumberField@MyTextField>:
    # input_type: "number"
    # input_filter: "int"
    max_text_length: 5


<DialogContent>:

    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "300dp"


<RenameDialogContent>:
    height: "50dp"

    path: nickname

    MyTextField:
        id: nickname
        hint_text: "enter nick"


<AccountDialogContent>:
    height: "50dp"

    path: acc_name

    MyTextField:
        id: acc_name
        hint_text: "enter nick"